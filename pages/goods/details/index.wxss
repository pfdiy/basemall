/* pages/goods/details/index.wxss */

.goods-head{
  width: 100%;
}
.swipe{
  width: 100%;
  height: 750rpx;
}
.swipe-img{
  width: 100%;
  height: 750rpx;
}
.goods-info{
  margin: 0 auto;
  padding: 26rpx 0 28rpx 30rpx;
  background: #fff;
}
.goods-info .goods-number{
display: flex;
align-items: center;
justify-content: space-between;
}
.goods-price{
  display: flex;
  align-items: baseline;
}
.symbol {
  font-size: 30rpx;
  font-weight: bold;
  color: #fa4126;
}
.pprice{
  font-size: 48rpx;
  font-weight: bold;
  color: #fa4126;
}
.sold-num{
  font-size: 24rpx;
  color: #999999;
  margin-right:32rpx
}
.goods-title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.goods-name{
  width: 600rpx;
  color: #333333;
}
.goods-tag{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right:32rpx;
}
.share-text{
  font-size: 20rpx;
  color: #999999;
}
.goods-bottom-operation{
  width: 100%;
}