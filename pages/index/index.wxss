.main-wrapper{
  width: 100%;
}
.swiper {
  width: 100%;
  height: 300rpx;
}
.swiper-item {
  width: 100%;
  display: flex;
  justify-content: center;
}
.swiper-image {
  width: 720rpx;
  height: 300rpx;
  border-radius: 15rpx;
}
.NoticeBar {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.NoticeBar-text {
  width: 720rpx;
  margin-bottom: 15rpx;
}
.van-notice-bar{
    height: 15px!important;
    font-size: 12px!important;
    border-radius: 15rpx!important;
    padding:5px!important;
}
.nav-list{
  width: 100%;
 display: flex;
 justify-content: center;
}
.nav-item{
  width: 720rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}
.nav-list-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 20%;
  margin-bottom:10px;
  margin-top: 10px;
}
.nav-list-item .nav-list-img{
  width: 86rpx;
  height: 86rpx;  
  will-change:transform;
}
.nav-list-item .nav-list-text {
  font-size: 14px;
  margin-top: 3px;
}
.tabbar{
  width: 100%;
  height: 100%;
}
.goods-list-wrap{
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 30px;
  flex-direction: column;
}
.goods-list-wrap .goods-list-card{
  width: 720rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}
.goods-card{
  width: 350rpx;
  border-radius: 0 0 15rpx 15rpx;
  background: #fff;
  box-shadow: 0 0 40rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 10px;
}
.goods-img{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 350rpx;
  height: 340rpx;
  margin-bottom: 10rpx;
}
.goods-card-title{
  flex-shrink: 0;
  font-size: 28rpx;
  color: #333;
  font-weight: 400;
  display: -webkit-box;
  height: 33rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-word;
  line-height: 30rpx;
  padding-left: 20rpx;
  margin-bottom: 10rpx;
}
.goods-card-tags{
  width: 100%;
  padding-left: 20rpx;
  padding-bottom: 10rpx;
}
.goods-card-down{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: baseline;
  line-height: 32rpx;
  margin: 8rpx 0 0 0;
}
.spec-for-price {
  font-size: 36rpx;
  font-weight: 700;
  color: #fa4126;
  display: flex;
  align-items: baseline;
  padding-left: 20rpx;
  padding-bottom: 10rpx;
}
.symbol{
  font-size: 24rpx;
}

.goods-card-ico{
  width: 100%;
  display: flex;
  align-items: center;
  margin-left: 40%;
}
.category-title{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}
.category-title .title{
  width: 720rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f9f9f9;
  color: #333;
  flex-direction: column;
  line-height:60rpx;
  font-size:30rpx;
  border-radius: 5rpx;
  padding: 2rpx 0 15rpx 0;
  font-weight:bold

}
.category-title .line{
  height: 6rpx;
  width: 35rpx;
  border-radius: 100rpx;
  background: #ff3456;
}
.goods-list{
  width: 100%;
  display: flex;
  justify-content: center;
}